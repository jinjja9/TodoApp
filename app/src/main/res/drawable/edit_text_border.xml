<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền bên trong EditText -->
    <solid android:color="#FFFFFF"/>

    <!-- Viền của EditText -->
    <stroke
        android:width="1.5dp"
        android:color="@color/gray"/> <!-- Màu viền -->

    <!-- Bo góc của EditText -->
    <corners android:radius="8dp"/> <!-- Bo góc viền -->

    <!-- Khoảng cách padding bên trong EditText -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>